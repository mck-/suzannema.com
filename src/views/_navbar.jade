.off-canvas-wrap(data-offcanvas)
  .inner-wrap
    nav.tab-bar.show-for-small-only
      section.left-small
        a.left-off-canvas-toggle.menu-icon(href="#menu")
          span

      section.middle.tab-bar-section
        img(src="./images/SuzanneMa.png")

    aside.left-off-canvas-menu
      ul.off-canvas-list
        li
          label Suzanne Ma
        li
          a(href="#about") About
        li
          a(href="#published") Published work
        li
          a(href="#events") Events
        li
          a(href="#blog") Blog

    section.main-section
      include _topbar
      include main

    a.exit-off-canvas

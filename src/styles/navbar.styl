.tab-bar
  background-color white
  z-index 6

  .menu-icon
    background-color color_red

    span::after
      box-shadow 0 0 1px 2px white, 0 9px 1px 2px white, 0 18px 1px 2px white

  img
    width 120px

.top-bar
  position: fixed
  z-index: 8
  top: 0
  left: 0
  width: 100%
  height: 80px
  background-color white

  .inner
    width 100%
    margin 0 auto
    max-width 62.5rem

  .name
    display flex
    align-items center
    height 80px
    margin 0 5vw

  .top-bar-section
    li
      display flex
      align-items center
      margin 0 1vw
      height: 80px
      background-color white !important

      a
        position relative
        padding 0 !important
        margin-top 10px
        line-height 20px !important
        font-family Serlio
        font-size h2_size
        color font_color !important
        background-color white !important
        text-decoration none

      a:hover
        color color_red !important

      a:before
        content ""
        position absolute
        width 100%
        height 3px
        bottom 0
        left 0
        background-color color_red
        visibility hidden
        transform scaleX(0)
        transition all 0.3s ease-in-out 0s

      a:hover:before
        visibility visible
        transform scaleX(1)

      &.active > a
        color color_red !important
        font-style oblique
        transition all 0.3s ease-in-out 0s
